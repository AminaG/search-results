{
    "resources": {
        "body": [
            {
                "type": "style",
                "src": "./style.css"
            },
            {
                "type": "script",
                "src": "./script.build.js"
            }
        ]
    },
    "preview": {
      "handlers": [
        {
          "options": ["*"],
          "execute": "INSTALL_SCOPE.BlockLy.gSearch.reload(INSTALL_OPTIONS)"
        }
      ]
    },
    "options": {
        "properties": {
            "location type" : {
              "default": "element",
              "format": "radios",
              "title": "How to position form",
              "type": "string",
              "order": 1,
              "enum": [
                "element",
                "floated"
              ],
              "enumNames": {
                "element": "In element",
                "floated": "Fixed in screen"
              }
            },
            "location": {
                "title": "Location",
                "type": "object",
                "format": "element",
                "showIf": {
                    "location type": "element"
                  },
                "default": {
                  "selector": "body",
                  "method": "prepend"
                },
                "order": 2
            },
            "position_vertical" : {
              "type": "object",
              "order": 3,
              "showIf": {
                "location type": "floated"
              },
              "properties": {
                "type" : {
                    "title": "Vertical position",
                    "order": 1,
                    "type": "string",
                    "default": "top",
                    "enum": [
                        "top",
                        "bottom"
                    ],
                    "enumNames": {
                        "top": "Top",
                        "bottom": "Bottom"
                    }
                },
                "distance" : {
                    "title": "Vertical distance",
                    "order": 2,
                    "type": "string",
                    "default": "10px",
                    "enum": [
                        "5px",
                        "10px",
                        "15px"
                    ],
                    "enumNames": {
                        "5px": "Small",
                        "10px": "Medium",
                        "15px": "Large"
                    }
                }
              }
            },
            "position_horizontal" : {
              "type": "object",
              "order": 4,
              "showIf": {
                "location type": "floated"
              },
              "properties": {
                "type" : {
                    "title": "Horizontal position",
                    "order": 1,
                    "type": "string",
                    "default": "left",
                    "enum": [
                        "left",
                        "right"
                    ],
                    "enumNames": {
                        "left": "Left",
                        "right": "Right"
                    }
                },
                "distance" : {
                    "title": "Horizontal distance",
                    "order": 2,
                    "type": "string",
                    "default": "10px",
                    "enum": [
                        "5px",
                        "10px",
                        "15px"
                    ],
                    "enumNames": {
                        "5px": "Small",
                        "10px": "Medium",
                        "15px": "Large"
                    }
                }
              }
            },
            "placeholder": {
                    "title": "Input button text",
                    "order": 5,
                    "type": "string",
                    "default": "Enter search term ..."
                },
            "theme" : {
                    "title": "Choose theme",
                    "order": 7,
                    "type": "string",
                    "default": "light",
                    "enum": [
                        "light",
                        "dark"
                    ],
                    "enumNames": {
                        "light": "Light",
                        "dark": "Dark"
                    }
                }
        }
    }
}
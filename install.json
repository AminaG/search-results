{
    "resources": {
        "body": [
            {
                "type": "style",
                "src": "./style.css"
            },
            {
                "type": "script",
                "src": "./script.js"
            }
        ]
    },
    "options": {
        "properties": {
            "placeholder": {
                "title": "Input button text",
                "order": 1,
                "type": "string",
                "default": "Enter search term ..."
            },
            "position": {
                "title": "Search position",
                "order": 2,
                "type": "string",
                "default": "top left",
                "format": "radios",
                "enum": [
                    "top left",
                    "top right",
                    "bottom left",
                    "bottom right"
                ],
                "enumNames": {
                    "top left": "Top left",
                    "top right": "Top right",
                    "bottom left": "Bottom left",
                    "bottom right": "Bottom right"
                }
            },
            "color": {
                "title": "Color",
                "order": 3,
                "type": "string",
                "default": "blue",
                "format": "radios",
                "enum": [
                    "blue",
                    "red",
                    "green"
                ],
                "enumNames": {
                    "blue": "Blue",
                    "red": "Red",
                    "green": "Green"
                }
            }
        }
    }
}